@page
@model DemoProgressBar.Pages.ChatRoom.IndexModel

<div id="app" class="d-flex flex-row">
    <div id="UsersBoard" class="usersboard">
        <div class="card border border-2">
            <div class="card-header">
                @* {{connectionid}} *@
            </div>
            <div class="card-body p-0 overflow-auto" :model="chatlist">
                <div class="useritem d-flex flex-row border-bottom border-1 border-dark text-truncate " v-bind:class="{'active':user.connectionID === nowtalkid}" v-for="user in chatlist" @@click="talkselect(user.connectionID)">
                    <img class="userpic img-thumbnail rounded-circle" src="https://storage.googleapis.com/www-cw-com-tw/article/201810/article-5bd182cf13ebb.jpg">
                    <span class="username fs-6 d-none d-md-block">aaa</span>
                    <span class="unreadcount d-md-block badge bg-primary rounded-pill d-none d-md-block">14</span>
                </div>
            </div>
            <div class="card-footer">
                @* {{connectionid}} *@
            </div>
        </div>
    </div>
    <div id="TalkBoard" class="talkboard">
        <div class="card border border-2">
            <div class="card-header">
                {{connectionid}}
            </div>
            <div class="card-body overflow-auto" ref="scrollContainer" :model="nowtalk">
                <div class="d-flex" v-bind:class="text.talkid == connectionid? 'justify-content-end':'justify-content-start'" v-for="text in nowtalk">
                    <p class="talkboard-body border border-1 rounded rounded-2  badge fs-6 text-wrap text-start"
                       v-bind:class="text.talkid == connectionid? 'bg-success':'bg-light text-dark'">
                        {{text.message}}
                    </p>
                </div>
            </div>
            <div class="card-footer align-items-center">
                <input class="form-control" @@keydown.enter.native="sendmessage" v-model="keyonmessage" v-bind:disabled="!nowtalkid" />
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/chatroom/chatroom.js" asp-append-version="true"></script>
}