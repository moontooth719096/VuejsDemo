@page
@*@model DemoProgressBar.Pages.ChatRoom.IndexModel*@

<div id="app" class="row g-0 ">
    <div id="UsersBoard" class="usersboard col-1 col-md-3 d-flex flex-column">
        <div class="card d-flex flex-column h-100">
            <div class="card-header">
                {{connectionid}}
            </div>
            <div class="card-body p-0 overflow-auto flex-grow-1" :model="chatlist">
                <div class="useritem row g-0 border rounded-2 p-1" v-bind:class="{'active':user.connectionID === nowtalkid}" v-for="user in chatlist" @@click="talkselect(user.connectionID)">
                    <img class="item-pic col-12 col-md-3 img-thumbnail rounded-circle border-1 p-1" :src="user.imgPath">
                    <div class="item-center col-7 col-md-7 m-0 d-none d-md-block">
                       
                        <strong class="text-truncate">{{user.connectionID}}</strong>
                        <small class="text-truncate">{{user.lastMesage}}</small>
                    </div>
                    <div class="otherinfo col-2 col-md-2 d-none d-md-block position-relative">
                        @* <span class="noread position-absolute top-50 start-50 translate-middle badge bg-primary rounded-pill" style="text-align: center; display:block">14</span> *@
                        <span class="badge bg-primary rounded-pill position-absolute top-50 start-50 translate-middle noread" v-if="user.noReadCount>0">{{user.noReadCount}}</span>
                    </div>
                </div>
            </div>
            <div class="card-footer mt-auto">
                @* {{connectionid}} *@
            </div>
        </div>
    </div>
    <div id="TalkBoard" class="talkboard col d-flex flex-column">
        <div class="card d-flex flex-column h-100">
            <div class="card-header">
                
            </div>
            <div class="card-body overflow-auto flex-grow-1" ref="scrollContainer" :model="nowtalk">
                <div class="d-flex" v-bind:class="text.talkid == connectionid? 'justify-content-end':'justify-content-start'" v-for="text in nowtalk">
                    <p class="talkboard-body border border-1 rounded rounded-2  badge fs-6 text-wrap text-start"
                       v-bind:class="text.talkid == connectionid? 'bg-success':'bg-light text-dark'">
                        {{text.message}}
                    </p>
                </div>
            </div>
            <div class="card-footer align-items-center mt-auto">
                <input class="form-control" @@keydown.enter.native="sendmessage" v-model="keyonmessage" v-bind:disabled="!nowtalkid" />
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/chatroom/chatroom.js" asp-append-version="true"></script>
    <script>
        // 在窗口大小变化时，动态设置 .talkboard 的高度
        window.addEventListener('resize', function () {
            setTalkboardHeight();
            setTalkboardWidth();
        });

        // 页面加载时设置初始高度
        window.addEventListener('load', function () {
            setTalkboardHeight();
            setTalkboardWidth();
        });

        function setTalkboardHeight() {
            var headerHeight = document.querySelector('header').offsetHeight;
            
            var windowHeight = window.innerHeight;
            console.log('windowHeight:' + windowHeight);
            var talkboardHeight = windowHeight - headerHeight;

            document.getElementById('TalkBoard').style.height = talkboardHeight + 'px';
            document.getElementById('UsersBoard').style.height = talkboardHeight + 'px';
        }

        function setTalkboardWidth() {
            var userboardWidth = document.getElementById('UsersBoard').offsetWidth;
            
            var windowWidth = window.innerWidth;
            console.log('windowWidth:' + windowWidth);
            var talkboardWidth = windowWidth - userboardWidth;

            document.getElementById('TalkBoard').style.width = talkboardWidth + 'px';
        }
    </script>
}